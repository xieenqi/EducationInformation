<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Welcome" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:background">@drawable/welcome_01</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/gray_10</item>
    </style>

    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">5dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="Dilaog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="0" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/roll_up</item>
        <item name="android:windowExitAnimation">@anim/roll_down</item>
    </style>

    <style name="dialogWindowAnimtTop" mce_bogus="0" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/roll_down</item>
        <item name="android:windowExitAnimation">@anim/roll_up</item>
    </style>

    <style name="dialogWindowAnimRight" mce_bogus="0" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="dialogWindowAnimLeft" mce_bogus="0" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:allowSingleTap">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/dialogWindowAnimRight</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogBottom" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:gravity">bottom</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- 教育装备样式 -->
    <style name="linerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#F8FAF9</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="imgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray_20</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>