<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300"
    android:layout_height="wrap_content"
    android:background="@drawable/select_button_light_color_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/me_myinfo_sex_tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="@string/choose_sex"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/me_myinfo_sex_male_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:contentDescription="@string/sex_male"
            android:gravity="center"
            android:src="@drawable/selector_me_male" />

        <ImageView
            android:id="@+id/me_myinfo_sex_female_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="0.5"
            android:contentDescription="@string/sex_female"
            android:gravity="center"
            android:src="@drawable/selector_me_fmale" />
    </LinearLayout>

</LinearLayout>